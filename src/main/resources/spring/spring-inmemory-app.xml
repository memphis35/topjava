<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <bean class="ru.javawebinar.topjava.service.MealService" id="memoryMealService">
        <constructor-arg name="repository" ref="inMemoryMealRepository"/>
    </bean>

    <bean class="ru.javawebinar.topjava.service.UserService" id="memoryUserService">
        <constructor-arg name="repository" ref="inMemoryUserRepository"/>
    </bean>

    <bean class="ru.javawebinar.topjava.web.meal.MealRestController">
        <constructor-arg name="service" ref="memoryMealService"/>
    </bean>

    <bean class="ru.javawebinar.topjava.web.user.AdminRestController">
        <property name="service" ref="memoryUserService"/>
    </bean>

    <context:component-scan base-package="ru.javawebinar.**.repository.inmemory"/>

</beans>